.banner image{
  width:100%;
  height:100%;
}
.banner swiper{
  height:100%;
}
.banner{
 height:300rpx;
  position: relative;
}
.banner .ul{
  z-index: 100;
  position: absolute;
  left: 40%;
  top:70%;
}
.ul .active{
  background: #0EB6FF;
}
.ul text{
  display: inline-block;
  width:15rpx;
  height:15rpx;
  border-radius: 7rpx;
  border:1px solid black;
  margin:0rpx 10rpx;
}
.head{
 background: #0EB6FF;
 display: flex;
 height:80rpx;
 width:100%;
}
.head >.left,.right{
  width:15%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head .center{
  width:70%;
  position:relative;
}
.head view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.head .center image{
  width:6%;
  height:35%;
  position: absolute;
  z-index: 5;
  top:30%;
  left:10%;
}
.head input{
  border-radius: 100rpx;
  width:100%;
  text-indent: 20rpx;
  background: white;
}
.head image{
 width:50%;
height:60%;
 
}
.topSwiper image{
  width:30rpx;
  height:25rpx;
  vertical-align: middle;
}
.topSwiper{
   font-size:30rpx;
   height:80rpx;
   background: #FFF4D1;
  line-height: 80rpx;
  display: flex;
  color:#878887;
}
.topSwiper .left,.right{
  display: flex;
  justify-content: center;
  align-items: center;
  width:15%;
}
.topSwiper .center{
  width:70%;
}
.topSwiper text{
  width:100%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
   white-space: nowrap;
}
.topSwiper  a{
  display: inline-block;
  text-align: center;
    font-size:20rpx;
}
.con{
  wdith:100%;
  display: flex;
  font-size:25rpx;
  flex-wrap: wrap;
}
.con image{
  width:150rpx;
  height:100rpx;
  transform: rotate(-40deg); 
}
.con view view{
padding: 5rpx 0rpx;
   margin:20rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width:80%;
  border-radius: 60%;
}
.con>view{
 
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:20%;

}
.good{
 margin:50rpx 0rpx;
}
.goodHead{
  font-size:30rpx;
  width:95%;
  display: flex;
  margin:0 auto;
}
.goodHead .left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:50%;
}
.goodHead .left image{
  width:40rpx;
  height:40rpx;
  margin-right:10rpx;
}
.goodHead .right{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width:50%;
}
.goodHead .right text{
  margin-left:10rpx;
  background: black;
  width:40rpx;
  height:40rpx;
  border-radius: 50%;
  display: inline-block;
}
.goodHead .right text ::after{
   display: inline-block;
   content: '';
   float: right;
   margin-right:15rpx;
   margin-top:10rpx;
   width:15rpx;
   height:15rpx;
  border-top:2px solid white;
  border-right:2px solid white;
  transform: rotate(45deg)
}
.goodCon{
  height:240rpx;
}
.goodCon swiper{
  height:100%;
}
.goodSwiper{
  width:100%;
  display: flex;
  height:240rpx;
}
.goodSwiper .left1{
  width:40%;
  
}
.goodSwiper .left1 image{
 width: 200rpx;
height:200rpx;
}
.goodSwiper .right1{
  width:60%;
  font-size:30rpx;
}
.goodSwiper .right1 view{
  width:80%;
  overflow: hidden;
  text-overflow: ellipsis;
   white-space: nowrap;
   font-weight: 600;
   margin:10rpx 0rpx;
}
.goodSwiper .right1 view text{
  color:#A9A9A9;
  font-size:20rpx;
 
  display: inline-block;
}
.goodSwiper .right1 .goodF {
  display: flex;
  justify-content: space-between;
}
.goodSwiper .right1 .goodF >a{
  display: inline-block;
  width:40%;
}
.goodSwiper .right1 .goodF >text{
  display: inline-block;
  width:40%;
}
.goodSwiper .right1 .goodF1{
  display: flex;
  justify-content: space-between;
}
.goodSwiper .right1 .goodF1 a{
  color:#FF7C2A;
  width:40%;
}
.goodSwiper .right1 .goodF1 .jia{
  color:#0EB6FF;
  font-size:40rpx;
  text-align: right;
}
